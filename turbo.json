{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false
    },
    "format": {},
    "format:fix": {},
    "test": {
      "dependsOn": ["@flipbookqr/shared#build"]
    },
    "test:watch": {},
    "benchmark": {}
  }
}
